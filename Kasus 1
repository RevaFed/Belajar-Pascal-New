program anak_ayam;

uses crt;
        var
        N:integer;
begin
        clrscr;
                N:=5;
        while(N > 1) do
        begin
                writeln('Anak Ayam Turun ', N, ' Mati Satu Tinggal ', N - 1);
        N:= N - 1;
        end;
               if ( N = 1 )then
               writeln('Anak Ayam Turun ', N, ' Mati Satu Tinggal Induknya.');
        readln;
end.

